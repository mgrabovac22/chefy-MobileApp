<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.SecondStepFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/title_second_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Naslov"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:layout_marginBottom="20dp"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/colorPrimary"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"
                android:layout_marginBottom="10dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Opis jela:"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/description_second_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:text="Opis"
                android:layout_marginStart="15dp"/>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/colorPrimary"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/stageName_second_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center"
                android:textSize="20sp"
                android:text="Počnimo sa "
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />
            <TextView
                android:id="@+id/author_second_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Prema kuharu potrebno je:"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/desc_preparation_second_step"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:text="Prvo je potrebno isjeckati svo povrče na male komade, te je potrebno sva 4 jaja razbiti. Nakon toga treba razdvojiti žumanjke od bjelanjaka i staviti ih u posebne zdjele."
                android:layout_marginStart="15dp"/>

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:text="Vrijeme potrebno za izvođenje ovog koraka:"
                android:layout_marginEnd="10dp" />
            <TextView
                android:id="@+id/step_time_second_step"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10 minuta"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_second_step"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp"
                tools:src="@tools:sample/backgrounds/scenic" />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                app:dividerColor="@color/colorPrimary"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"
                android:layout_marginBottom="10dp" />
            <View
                android:layout_width="wrap_content"
                android:layout_height="75sp"/>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_next_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="15dp"
        android:text="Sljedeći korak"
        app:backgroundTint="@color/colorPrimary"
        android:tint="@color/black"
        android:textColor="@color/colorSecondary"
        android:src="@drawable/fab_preparation"
        android:contentDescription="@string/fab_detail" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/btn_back_step2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|start"
        android:layout_margin="15dp"
        android:icon="@drawable/fab_preparation"
        android:text="Prethodni korak"
        android:textColor="@color/colorSecondary"
        app:backgroundTint="@color/colorPrimary"
        android:tint="@color/black"
        android:contentDescription="Prikaži popis" />

</FrameLayout>